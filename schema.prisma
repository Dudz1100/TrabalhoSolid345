datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  type  String // "physical" ou "digital"
  price Float
}

model Order {
  id        Int      @id @default(autoincrement())
  customer  String
  items     String   // JSON string
  total     Float
  status    String
  createdAt DateTime @default(now())
}